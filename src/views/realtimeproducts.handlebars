<div class="container mt-4 mb-4">
  <h1>Real Time Products</h1>
  <h3 id="role">{{role}}</h3>
  <h3 id="email">{{email}}</h3>

  <a class="btn btn-info" href="/api/sessions/current">My profile</a>

  <div
    id="containerProducts"
    class="border p-3"
    style="max-height: 400px; overflow-y: scroll;"
  >
    <!-- Productos en tiempo real aparecerán aquí -->
  </div>

  <h2 class="mt-4">Formulario para agregar productos</h2>
  <form class="form-inline" enctype="multipart/form-data" id="productForm">
    <div class="form-group mb-2">
      <input
        type="text"
        id="title"
        class="form-control"
        placeholder="Titulo"
        name="title"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="text"
        id="description"
        class="form-control"
        placeholder="Descripcion"
        name="description"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="number"
        id="price"
        class="form-control"
        placeholder="Precio"
        name="price"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="file"
        id="thumbnails"
        class="form-control"
        name="thumbnails"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="text"
        id="code"
        class="form-control"
        placeholder="Código"
        name="code"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="number"
        id="stock"
        class="form-control"
        placeholder="Stock"
        name="stock"
      />
    </div>
    <div class="form-group mb-2">
      <input
        type="text"
        id="category"
        class="form-control"
        placeholder="Categoria"
        name="category"
      />
    </div>
    <div class="form-group mb-2">
      <select id="status" class="form-control" name="status">
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
      </select>
    </div>
    <button
      type="button"
      id="btnEnviar"
      class="btn btn-primary mb-2"
    >Enviar</button>
  </form>

  {{#if isAdmin}}
    <button id="showAccountsBtn" class="btn btn-secondary mt-4">Mostrar Cuentas</button>
    <button id="deleteInactiveAccountsBtn" class="btn btn-danger mt-4">Eliminar
      Cuentas Inactivas</button>
    <div
      id="accountsContainer"
      class="border p-3 mt-3"
      style="max-height: 400px; overflow-y: scroll;"
    >
      <!-- Cuentas aparecerán aquí -->
    </div>
  {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="/js/realtime.js"></script>
<script src="/js/accounts.js"></script>
<script src="/js/deleteInactiveAccounts.js"></script>